<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".activity.LoginActivity">

    <com.airbnb.lottie.LottieAnimationView android:layout_width="match_parent" android:layout_height="match_parent"
                                           android:background="#ffffff"
                                           android:alpha="0.0"
                                           app:lottie_fileName="loading.json"
                                           app:lottie_loop="true"
                                           android:visibility="gone"
                                           android:id="@+id/loadingProgress"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22.2sp"
            android:textColor="#1b1b1b"
            android:fontFamily="@font/nanum_square_l"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="50.3dp"
            android:id="@+id/title"
            android:text="환영해요"/>

    <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/login_side_margin"
            android:layout_marginLeft="@dimen/login_side_margin"
            android:layout_below="@id/title"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="7dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="ID |"
                          android:fontFamily="@font/nanum_square_eb"
                          android:textColor="#ff9797"
                          android:gravity="center_vertical"
                          android:id="@+id/hintID"/>

                <AutoCompleteTextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/hintID"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginLeft="5dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_margin="7dp"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="7dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="PASSWORD |"
                          android:textColor="#ffd154"
                          android:fontFamily="@font/nanum_square_eb"
                          android:gravity="center_vertical"
                          android:id="@+id/hintPW"/>

                <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:imeActionId="6"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/email_sign_up_button"
                style="?android:textAppearanceSmall"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nanum_square_l"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/action_sign_up"/>

        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/autoLogin"
                  android:textSize="10dp"
                  android:layout_gravity="center_horizontal"
                  android:fontFamily="@font/nanum_square_l"
                  android:background="@drawable/auto_login_check_box"
                  android:button="@null"
                  android:text="자동 로그인"/>

        <androidx.cardview.widget.CardView android:layout_width="60dp"
                                           app:cardCornerRadius="30dp"
                                           app:cardElevation="10dp"
                                           android:layout_margin="10dp"
                                           android:id="@+id/email_sign_in_button"
                                           android:layout_gravity="center_horizontal"
                                           android:foreground="?attr/selectableItemBackground"
                                           android:layout_height="60dp">

            <TextView
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_eb"
                    android:textColor="#a6b8fa"
                    android:text="@string/action_sign_in"
                    android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>