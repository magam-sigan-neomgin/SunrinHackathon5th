<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content">

	<TextView
			android:id="@+id/yourTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Title"
			android:fontFamily="@font/nanum_square_eb"
			android:textSize="30sp"/>

	<TextView
			android:id="@+id/yourDate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="2019년 07월 19일 금요일 22:33"
			android:fontFamily="@font/nanum_square_b"/>

	<TextView
			android:id="@+id/yourContent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="나는 오늘 선린톤에 참가했는데 10시간 동안 별로 한 게 없는 것 같아 슬프다 ㅜ ㅜ"
			android:fontFamily="@font/nanum_square_r"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<View android:layout_width="wrap_content" android:layout_height="0dp"
			  android:layout_weight="1"/>

		<Button android:id="@+id/yourLike"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="좋아요"/>

		<Button
				android:id="@+id/yourComment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="댓글"/>

	</LinearLayout>

</LinearLayout>