<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical"
        android:padding="20dp">

    <View android:layout_width="match_parent" android:layout_height="wrap_content"
          android:layout_weight="1" />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground">

        <TextView
                android:id="@+id/main_date"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:fontFamily="@font/nanum_square_eb"
                android:textColor="@color/colorPrimaryGreen"
                android:gravity="center_vertical"
                android:text="오늘은 ㅋㅋ"
                android:textStyle="bold"
                android:textSize="16sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="80dp"
                    android:layout_margin="13dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:id="@+id/profileImage"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_default_profile"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#e8e8e8"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:paddingLeft="10dp">

                <View android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:layout_weight="1"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/main_profile_hi"
                          android:textSize="14sp"
                          android:fontFamily="@font/nanum_square_b"
                          android:textColor="@color/colorPrimaryGreen"/>

                <View android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="1"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="김나현"
                              android:fontFamily="@font/nanum_square_eb"
                              android:textSize="25sp"
                              android:textColor="@color/colorPrimaryGreen"
                              android:id="@+id/name"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text=" 님"
                              android:fontFamily="@font/nanum_square_b"
                              android:textSize="22sp"
                              android:textColor="@color/colorPrimaryGreen"/>

                </LinearLayout>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"
                          android:text="Whynxt@naver.com"
                          android:fontFamily="@font/nanum_square_r"
                          android:textColor="@color/colorPrimaryGreen"
                          android:id="@+id/email"/>

                <View android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_btn_diary_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout android:layout_width="match_parent" android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="30dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/main_diary_write_title"
            android:fontFamily="@font/nanum_square_eb"
            android:textSize="21sp"
            android:textColor="@color/colorPrimaryGreen"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
            android:text="@string/main_diary_write_sub"
            android:fontFamily="@font/nanum_square_r"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryYellow"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_btn_diary_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout android:layout_width="match_parent" android:layout_height="120dp"
                      android:orientation="vertical"
                      android:gravity="center_vertical"
                      android:paddingLeft="30dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/main_diary_my_title"
                      android:fontFamily="@font/nanum_square_eb"
                      android:textSize="21sp"
                      android:textColor="@color/colorPrimaryGreen"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="@string/main_diary_my_sub"
                      android:fontFamily="@font/nanum_square_r"
                      android:textSize="16sp"
                      android:textColor="@color/colorPrimaryYellow"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_btn_diary_your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout android:layout_width="match_parent" android:layout_height="120dp"
                      android:orientation="vertical"
                      android:gravity="center_vertical"
                      android:paddingLeft="30dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/main_diary_your_title"
                      android:fontFamily="@font/nanum_square_eb"
                      android:textSize="21sp"
                      android:textColor="@color/colorPrimaryGreen"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="@string/main_diary_your_sub"
                      android:fontFamily="@font/nanum_square_r"
                      android:textSize="16sp"
                      android:textColor="@color/colorPrimaryYellow"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View android:layout_width="match_parent" android:layout_height="wrap_content"
          android:layout_weight="1" />

</LinearLayout>